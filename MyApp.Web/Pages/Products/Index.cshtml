@page
@model IndexModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "E-Bazaar";
}

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" />
}

<header class="header">
  <div class="container">
    <div class="header-content">
      <div class="logo">E-Bazaar</div>
<div class="cart" onclick="home.openCartSidebar()">
  <div class="cart-icon"></div>
  Cart (<span id="cartCount">@Model.CartCount</span>)
</div>

    </div>
  </div>
</header>

<div id="toast-container" style="
     position: fixed; top: 1rem; right: 1rem;
     display: flex; flex-direction: column; gap: 0.5rem;
     z-index: 9999;">
</div>


<main class="container">
  <!-- Stats -->
  <section class="stats-section">
    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-icon">üõçÔ∏è</div>
        <div class="stat-content">
          <h3>Total Products: @Model.TotalProducts</h3>
          <p>Maximum sale of all the products<br/>during last month</p>
        </div>
      </div>
      <div class="stat-card">
        <div class="stat-icon">üë•</div>
        <div class="stat-content">
          <h3>Total Vendors: @Model.TotalVendors</h3>
          <p>@Model.TotalVendors vendors available</p>
        </div>
      </div>
      <div class="stat-card">
        <div class="stat-icon">üì¶</div>
        <div class="stat-content">
          <h3>Unique Products: @Model.UniqueProducts</h3>
          <p>Recognized as unique products</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Search -->
  <section class="search-section">
    <div class="search-bar">
      <input type="text" id="searchInput" class="search-input" placeholder="Search‚Ä¶" value="@Model.SearchText" onkeydown="if(event.key==='Enter') home.applyFilters()" />
      <button class="search-btn" onclick="home.applyFilters()">Search</button>
      <button class="add-product-btn" onclick="home.openModal()">Add Product</button>
    </div>
    <div class="results-info" id="resultsInfo">
      Showing @Model.StartResult‚Äì@Model.EndResult of @Model.TotalResults results
    </div>
  </section>

  <!-- Products -->
   <section class="products-section">
    <div class="products-grid" id="productsGrid">
      @foreach(var p in Model.Products) {
<div class="product-card" data-product-id="@p.ProductId">
          <img src="https://images.unsplash.com/photo-1473968512647-3e447244af8f?w=400&h=300&fit=crop&crop=center" alt="DJI Phantom 3 Vision" class="product-image">          
          <div class="product-content">
            <div class="product-name">@p.ProductName</div>
            <div class="product-price">
              @if(p.DiscountedPrice < p.Price) {
                <span class="discounted-price">@p.DiscountedPrice.ToString("C")</span>
                <span class="original-price" style="text-decoration: line-through; color: #999; margin-left: 8px;">@p.Price.ToString("C")</span>
              } else {
                <span class="price">@p.Price.ToString("C")</span>
              }
            </div>
            <div class="cart-controls">
              <div class="quantity-controls">
                <div class="quantity-row">
                  <button class="quantity-btn" onclick="home.decreaseQuantity(this)">-</button>
                  <span class="quantity-display">1</span>
                  <button class="quantity-btn" onclick="home.increaseQuantity(this)">+</button>
                </div>
                <button class="confirm-add-btn" onclick="home.addToCart(this)">Add to Cart</button>
              </div>
              <button class="add-to-cart">Add to cart</button>
            </div>
          </div>
        </div>
      }
    </div>

    <!-- Pagination -->
    <div class="pagination">
      <button id="prevBtn" onclick="home.prevPage()">‚Üê Prev</button>
      <span id="pageButtons"></span>
      <button id="nextBtn" onclick="home.nextPage()">Next ‚Üí</button>

      <div class="per-page-select">
        <button class="per-page-btn" id="perPageBtn" onclick="home.togglePerDropdown()">
          @Model.PageSize per page
        </button>
        <div class="per-page-dropdown" id="perDropdown">
          <button class="per-page-option" onclick="home.changePerPage(5)">5 per page</button>
          <button class="per-page-option" onclick="home.changePerPage(10)">10 per page</button>
          <button class="per-page-option" onclick="home.changePerPage(20)">20 per page</button>
          <button class="per-page-option" onclick="home.changePerPage(50)">50 per page</button>
        </div>
      </div>
    </div>
  </section>
</main>

<!-- Add Product Modal -->

<div class="modal-overlay" id="modalOverlay" onclick="home.closeModalOnOverlay(event)">
  <div class="modal">
    <div class="modal-header">
      <div>
        <h2 class="modal-title">Add New Product</h2>
        
        <p class="modal-subtitle">Enter product details.</p>
      </div>
      <button class="modal-close" onclick="home.closeModal()">√ó</button>
    </div>
    <div class="modal-body">
      <div id="formErrors" class="form-errors" style="color:#d9534f; margin-bottom:1rem;"></div>

      <form id="addProductForm">
        <div class="form-group">
          <label class="form-label">Product Name</label>
          <input type="text" id="productName" class="form-input" oninput="home.generateSlug()" />
        </div>
        <div class="form-group">
          <label class="form-label">Slug</label>
          <div class="form-row">
            <input type="text" id="productSlug" class="form-input" />
            <button type="button" class="generate-btn" onclick="home.generateSlug()">Generate</button>
          </div>
        </div>
        <div class="form-group">
          <label class="form-label">Product Image URL</label>
          <input type="text" id="productImage" class="form-input" placeholder="https://example.com/img.jpg" />
          </div>

        <div class="form-group">
          <label class="form-label">Price</label>
          <input type="text" id="productPrice" class="form-input" />
        </div>
        <div class="form-group">
          <label class="form-label">Discount Start</label>
          <div class="date-input-wrapper">
            <input type="date" id="discountStart" class="date-input" value="@DateTime.UtcNow:yyyy-MM-dd" />
            <div class="calendar-icon"></div>
          </div>
        </div>
        <div class="form-group">
          <label class="form-label">Discount End</label>
          <div class="date-input-wrapper">
            <input type="date" id="discountEnd" class="date-input" value="@DateTime.UtcNow.AddDays(1):yyyy-MM-dd" />
            <div class="calendar-icon"></div>
          </div>
        </div>
      </form>
    </div>
    <div class="modal-footer">
      <button class="add-btn" onclick="home.submitProduct()">Add</button>
    </div>
  </div>
</div>

<!-- Shopping Cart Sidebar -->
<div class="cart-sidebar-overlay" id="cartSidebarOverlay" onclick="home.closeCartSidebar(event)">
  <div class="cart-sidebar">
    <div class="cart-header">
      <h3 class="cart-title">Shopping Cart</h3>
      <button class="cart-close" onclick="home.closeCartSidebar()">√ó</button>
    </div>
    <div class="cart-items" id="cartItems">
      @* Loop Model.CartItems here *@
      <div class="cart-item">
        <img src="~/images/placeholder.png" class="cart-item-image" />
        <div class="cart-item-details">
          <div class="cart-item-name">Sample Product</div>
          <div class="cart-item-price">$0.00</div>
          <div class="cart-item-quantity">
            <button class="qty-btn" onclick="home.updateCartQuantity(this,-1)">-</button>
            <span class="qty-number">1</span>
            <button class="qty-btn" onclick="home.updateCartQuantity(this,1)">+</button>
          </div>
        </div>
      </div>
    </div>
    <div class="cart-footer">
      <div class="cart-subtotal">
        <span class="subtotal-label">Subtotal</span>
        <span class="subtotal-amount" id="cartSubtotal">$0.00</span>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    <script>
      window.initialData = {
        pageSize: @Model.PageSize,
        currentPage: @Model.CurrentPage,
        totalResults: @Model.TotalResults,
        searchText: '@Model.SearchText'
      };
    </script>
    <script src="~/js/home.js"></script>
}